{
  "compilerOptions": {
    "target": "es2021",                                 
    "module": "commonjs",                               
    "outDir": "dist",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,                               
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/database/*": ["./src/database/*"],
      "@/users/*": ["./src/users/*"],
      "@/utils/*": ["./src/utils/*"],
    },
    "types": [
      "vitest/globals"
    ]
  }
}
